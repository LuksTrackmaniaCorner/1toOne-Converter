<Window x:Class="Converter_UI.Finished"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter_UI"
        mc:Ignorable="d"
        x:Name="Window"
        Title="Conversion finished" Height="176" Width="260" ResizeMode="NoResize" Icon="Image/1One_Logo.png">
    <Canvas>
        <Label Content="Conversion finished." Canvas.Left="57" Canvas.Top="6" FontSize="16" Height="36" Width="204"/>
        <Image Height="43" Width="43" Canvas.Left="10" Canvas.Top="10" Source="image/1One_Logo.png"/>
        <Label Content="{Binding SuccessMessage, ElementName=Window}" Canvas.Left="58" Canvas.Top="28" FontSize="14" Height="35" Width="175" Opacity="0.5"/>
        <Label Content="{Binding ErrorMessage, ElementName=Window}" Canvas.Left="7" Canvas.Top="55" FontSize="14" Height="35" Width="227" Opacity="0.5" />
        <Button Content="Close Window" Canvas.Left="10" Canvas.Top="89"  Width="224" Height="39" FontSize="14" Click="_closeButton_Click" />
    </Canvas>
</Window>
